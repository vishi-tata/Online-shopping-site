<%- include("../../shared/includes/head",{pageTitle: "Signup"}) %> 
<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
    <%- include("../../shared/includes/header") %> 
    <main>
        <h1>Create New Account</h1>
        <% if(inputData.errorMessage) { %>
            <section class="alert">
                <h2>Invalid Input</h2>
                <p><%= inputData.errorMessage %></p>
            </section>
            <% } %> 
        <form action="/signup" method="POST">
            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
            <p>
                <label for="user-email">E-mail</label>
                <input type="email" id="user-email" name="email" value="<%= inputData.email %>" required>
            </p>
            <p>
                <label for="confirm-email">Confirm E-mail</label>
                <input type="email" id="confirm-email" name="confirm-email" value="<%= inputData.confirmEmail %>" required>
            </p>
            <p>
                <label for="user-password">Password</label>
                <input type="password" id="user-password" name="password" value="<%= inputData.password %>" required minlength="6">
            </p>
            <p>
                <label for="confirm-password">Confirm Password</label>
                <input type="password" id="confirm-password" name="confirm-password" value="<%= inputData.confirmPassword %>" required minlength="6">
            </p>
            <hr>
            <p>
                <label for="user-name">Full Name</label>
                <input type="text" id="user-name" name="name" value="<%= inputData.name %>" required>
            </p>
            <p>
                <label for="street">Street</label>
                <input type="text" id="street" name="street" value="<%= inputData.street %>" required>
            </p>
            <p>
                
                <label for="pin-code">Pin Code</label>
                <input type="text" id="pin-code" name="pin-code" value="<%= inputData.pinCode %>" required minlength="6" maxlength="6">
            </p>
            <p>
                <label for="city">City</label>
                <input type="text" id="city" name="city" value="<%= inputData.city %>" required>
            </p>
            <button class="btn">Create Account</button>
            <p id="switch-form"><a href="/login">Login instead</a></p>
        </form>
    </main>
<%- include("../../shared/includes/footer") %> 